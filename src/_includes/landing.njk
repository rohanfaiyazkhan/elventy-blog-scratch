{% extends "layout.njk" %}

{% block body %}
    <main class="container">
        <section class="heroine">
            {% include "clip-path.svg" %}
            <picture>
                <img src="img/rohan-3.jpg" alt="Picture of Rohan Faiyaz Khan" class="heroine__img"/>
            </picture>
            <div>
                {% block heroine %}{% endblock %}
                {% include "social-icons.njk" %}
            </div>
        </section>
        <section class="home-posts">
            <div class="research-posts">
                <h3>Latest research articles</h3>
                {% set postslist = collections.research %}
                {% include "postslist.njk" %}
            </div>
            <div class="tech-posts">
                <h3>Latest tech tutorials</h3>
                {% set postslist = collections.tech %}
                {% include "postslist.njk" %}
            </div>
        </section>
    </main>
{% endblock %}